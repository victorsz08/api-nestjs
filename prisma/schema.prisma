generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters", "postgresqlExtensions", "relationJoins"]
  output = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Contract {
  id               String   @id @map("id")
  number           Int      @map("number")
  local            String   @map("local")
  phone            String   @map("phone")
  phoneSecondary   String?
  installationDate DateTime @map("installationDate")
  installationHour String   @map("installationHour")
  price            Float    @map("price")
  status           String   @map("status")
  userId           String   @map("userId")
  createdAt        DateTime @map("createdAt")
  updatedAt        DateTime @map("updatedAt")
  user             User     @relation(fields: [userId], references: [id])
}

model Notes {
  id        String   @id
  text      String
  user_id   String
  createdAt DateTime @default(now())
  updatedAt DateTime
  user      User     @relation(fields: [user_id], references: [id], onDelete: Cascade)
}


model User {
  id           String        @id
  username     String        @unique
  name         String
  lastname     String
  role         String 
  password     String
  createdAt    DateTime     
  updatedAt    DateTime
  Contract     Contract[]
  Notes        Notes[]
}